# Production Environment Variables for Bronwyn's Guide
# Copy this file to .env.production and fill in your actual values

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration (PostgreSQL/Supabase)
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres
DATABASE_PASSWORD=your-database-password

# Authentication (REQUIRED - Generate a strong secret!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-very-long-and-secure-jwt-secret-at-least-32-characters

# Frontend URL (Update with your actual Vercel URL)
FRONTEND_URL=https://bronwyns-guide.vercel.app

# AI Providers (At least one required)
# OpenAI API Key (for GPT-4 Vision and standard models)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenRouter API Keys (for GPT-5, Claude, and other advanced models)
# You can use either OPENROUTER_API_KEY or OPENROUTER_GPT_KEY
OPENROUTER_API_KEY=your-openrouter-api-key
# Alternative: OPENROUTER_GPT_KEY=your-openrouter-gpt-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_WINDOW_MS=60000
AI_RATE_LIMIT_MAX_REQUESTS=10

# Optional: Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# IMPORTANT NOTES:
# 1. Never commit this file with actual values to version control
# 2. All values marked as REQUIRED must be set for production
# 3. Generate a strong JWT_SECRET using the command provided above
# 4. Ensure DATABASE_URL points to your production PostgreSQL database
# 5. Update FRONTEND_URL with your actual Vercel deployment URL
# 6. Configure at least one AI provider (OpenAI or OpenRouter)